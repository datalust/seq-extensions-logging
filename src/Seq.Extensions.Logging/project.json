{
  "version": "2.0.0-*",

  "description": "Add centralized structured log collection to ASP.NET Core apps with one line of code.",
  "authors": [ "Datalust and Contributors" ],

  "packOptions": {
    "tags": [ "asp.net", "core", "logging" ],
    "projectUrl": "https://github.com/datalust/seq-extensions-logging",
    "licenseUrl": "http://www.apache.org/licenses/LICENSE-2.0",
    "iconUrl": "https://getseq.net/images/nuget/seq.png"
  },

  "dependencies": {
    "Microsoft.Extensions.Configuration.Abstractions": "1.0.0",
    "Microsoft.Extensions.Logging.Abstractions": "1.0.0"
  },

  "frameworks": {
    "net4.5": {
      "buildOptions": {
        "define": [ "REMOTING", "THREADING_TIMER", "WAITABLE_TIMER", "HRESULTS" ]
      },
      "frameworkAssemblies": {
        "System.Net.Http": ""
      }
    },
    "net4.6": {
      "buildOptions": {
        "define": [ "ASYNCLOCAL", "THREADING_TIMER", "WAITABLE_TIMER", "HRESULTS" ]
      },
      "frameworkAssemblies": {
        "System.Net.Http": ""
      }
    },
    "netstandard1.3": {
      "buildOptions": {
        "define": [ "ASYNCLOCAL", "THREADING_TIMER" ]
      },
      "dependencies": {
        "Microsoft.CSharp": "4.0.1",
        "System.Collections": "4.0.11",
        "System.Dynamic.Runtime": "4.0.11",
        "System.Globalization": "4.0.11",
        "System.Linq": "4.1.0",
        "System.Reflection": "4.1.0",
        "System.Reflection.Extensions": "4.0.1",
        "System.Runtime": "4.1.0",
        "System.Runtime.Extensions": "4.1.0",
        "System.Text.RegularExpressions": "4.1.0",
        "System.Threading": "4.0.11",
        "System.Threading.Timer": "4.0.1",
        "System.Net.Http": "4.1.0"
      }
    }
  },

  "buildOptions": {
    "warningsAsErrors": true,
    "xmlDoc": true,
    "keyFile": "../../asset/seqext.snk"
  }
}
